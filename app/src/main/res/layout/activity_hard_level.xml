<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_phone3"
    tools:context=".screen.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_style"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_style"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/white" />

            <Chronometer
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_btns_style"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                style="@style/style_btn"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                style="@style/style_btn"
                android:layout_toEndOf="@id/btn1"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                style="@style/style_btn"
                android:layout_toEndOf="@id/btn2"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                style="@style/style_btn"
                android:layout_toEndOf="@id/btn3"
                android:text="4" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                style="@style/style_btn"
                android:layout_toEndOf="@id/btn4"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                style="@style/style_btn"
                android:layout_below="@id/btn2"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                style="@style/style_btn"
                android:layout_below="@id/btn1"
                android:layout_toEndOf="@id/btn6"
                android:text="7" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                style="@style/style_btn"
                android:layout_below="@id/btn4"
                android:layout_toEndOf="@id/btn7"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                style="@style/style_btn"
                android:layout_below="@id/btn5"
                android:layout_toEndOf="@id/btn8"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10"
                style="@style/style_btn"
                android:layout_below="@id/btn5"
                android:layout_toEndOf="@id/btn9"
                android:text="10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn11"
                style="@style/style_btn"
                android:layout_below="@id/btn6"
                android:text="11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn12"
                style="@style/style_btn"
                android:layout_below="@id/btn6"
                android:layout_toEndOf="@id/btn11"
                android:text="12" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn13"
                style="@style/style_btn"
                android:layout_below="@id/btn8"
                android:layout_toEndOf="@id/btn12"
                android:text="13" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn14"
                style="@style/style_btn"
                android:layout_below="@id/btn9"
                android:layout_toEndOf="@id/btn13"
                android:text="14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn15"
                style="@style/style_btn"
                android:layout_below="@id/btn9"
                android:layout_toEndOf="@id/btn14"
                android:text="15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn16"
                style="@style/style_btn"
                android:layout_below="@id/btn11"
                android:text="16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn17"
                style="@style/style_btn"
                android:layout_below="@id/btn11"
                android:layout_toEndOf="@id/btn16"
                android:text="17" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn18"
                style="@style/style_btn"
                android:layout_below="@id/btn11"
                android:layout_toEndOf="@id/btn17"
                android:text="18" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn19"
                style="@style/style_btn"
                android:layout_below="@id/btn11"
                android:layout_toEndOf="@id/btn18"
                android:text="19" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn20"
                style="@style/style_btn"
                android:layout_below="@id/btn11"
                android:layout_toEndOf="@id/btn19"
                android:text="20" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn21"
                style="@style/style_btn"
                android:layout_below="@id/btn16"
                android:text="21" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn22"
                style="@style/style_btn"
                android:layout_below="@id/btn16"
                android:layout_toEndOf="@id/btn21"
                android:text="22" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn23"
                style="@style/style_btn"
                android:layout_below="@id/btn16"
                android:layout_toEndOf="@id/btn22"
                android:text="23" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn24"
                style="@style/style_btn"
                android:layout_below="@id/btn16"
                android:layout_toEndOf="@id/btn23"
                android:text="24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn25"
                style="@style/style_btn"
                android:layout_below="@id/btn20"
                android:layout_toEndOf="@id/btn24"
                android:background="@color/color_item_empty" />

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_style"
            android:text="Finish"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_restart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_style"
            android:text="Restart"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</FrameLayout>